{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "paths": {
      "assets/*": [
        "src/assets/*"
      ],
      "contexts/*": [
        "src/contexts/*"
      ],
      "hooks/*": [
        "src/hooks/*"
      ],
      "components/*": [
        "src/components/*"
      ],
      "pages/*": [
        "src/pages/*"
      ],
      "routes/*": [
        "src/routes/*"
      ],
    },
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      },
    ],
  },
}